{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Main",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "sudo": false,
            "justMyCode": true
        },
        {
            "name": "Python: Unittest",
            "type": "python",
            "request": "launch",
            "program": "test_runner.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "sudo": false,
            "justMyCode": true
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "console": "integratedTerminal",
            "sudo": false,
            "justMyCode": true
        },
        {
            "name": "Bash-Debug File",
            "type": "bashdb",
            "request": "launch",
            "program": "${file}",
            "showDebugOutput": true,
            "windows": {
                "bashPath": "C:\\Windows\\sysnative\\bash.exe"
            },
            "linux": {
                "bashPath": "bash"
            },
            "osx": {
                "bashPath": "bash"
            }
        }
    ]
}